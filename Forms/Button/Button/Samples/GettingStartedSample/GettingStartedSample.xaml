<?xml version="1.0" encoding="utf-8" ?>
<local:SampleView xmlns="http://xamarin.com/schemas/2014/forms"
                  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                  xmlns:local="clr-namespace:SampleBrowser.Core;assembly=SampleBrowser.Core"
                  xmlns:syncfusion="clr-namespace:Syncfusion.XForms.Buttons;assembly=Syncfusion.Buttons.XForms"                 
                  x:Class="SampleBrowser.SfButton.GettingStartedSample">
    <local:SampleView.Content>
        <ScrollView>

            <Grid Padding="10">
                <Grid.RowDefinitions>
                    <RowDefinition>
                        <RowDefinition.Height>
                            <OnPlatform x:TypeArguments="GridLength">
                                <On Platform="UWP">
                                    <OnIdiom x:TypeArguments="GridLength" Desktop="140" Tablet="140" Phone="*"/>
                                </On>
                                <On Platform="Android">
                                    <OnIdiom x:TypeArguments="GridLength" Desktop="140" Tablet="140" Phone="*"/>
                                </On>
                                <On Platform="iOS">
                                    <OnIdiom x:TypeArguments="GridLength" Desktop="140" Tablet="140" Phone="*"/>
                                </On>
                            </OnPlatform>
                        </RowDefinition.Height>
                    </RowDefinition>
                    <RowDefinition>
                        <RowDefinition.Height>
                            <OnPlatform x:TypeArguments="GridLength">
                                <On Platform="UWP">
                                    <OnIdiom x:TypeArguments="GridLength" Desktop="140" Tablet="140" Phone="*"/>
                                </On>
                                <On Platform="Android">
                                    <OnIdiom x:TypeArguments="GridLength" Desktop="140" Tablet="140" Phone="*"/>
                                </On>
                                <On Platform="iOS">
                                    <OnIdiom x:TypeArguments="GridLength" Desktop="140" Tablet="140" Phone="*"/>
                                </On>
                            </OnPlatform>
                        </RowDefinition.Height>
                    </RowDefinition>
                    <RowDefinition>
                        <RowDefinition.Height>
                            <OnPlatform x:TypeArguments="GridLength">
                                <On Platform="UWP">
                                    <OnIdiom x:TypeArguments="GridLength" Desktop="140" Tablet="140" Phone="*"/>
                                </On>
                                <On Platform="Android">
                                    <OnIdiom x:TypeArguments="GridLength" Desktop="140" Tablet="140" Phone="*"/>
                                </On>
                                <On Platform="iOS">
                                    <OnIdiom x:TypeArguments="GridLength" Desktop="140" Tablet="140" Phone="*"/>
                                </On>
                            </OnPlatform>
                        </RowDefinition.Height>
                    </RowDefinition>
                    <RowDefinition>
                        <RowDefinition.Height>
                            <OnPlatform x:TypeArguments="GridLength">
                                <On Platform="UWP">
                                    <OnIdiom x:TypeArguments="GridLength" Desktop="140" Tablet="140" Phone="*"/>
                                </On>
                                <On Platform="Android">
                                    <OnIdiom x:TypeArguments="GridLength" Desktop="140" Tablet="140" Phone="*"/>
                                </On>
                                <On Platform="iOS">
                                    <OnIdiom x:TypeArguments="GridLength" Desktop="140" Tablet="140" Phone="*"/>
                                </On>
                            </OnPlatform>
                        </RowDefinition.Height>
                    </RowDefinition>

                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition>
                        <ColumnDefinition.Width>
                            <OnPlatform x:TypeArguments="GridLength">
                                <On Platform="UWP">
                                    <OnIdiom x:TypeArguments="GridLength" Desktop="170" Tablet="200" Phone="*" />
                                </On>
                                <On Platform="Android">
                                    <OnIdiom x:TypeArguments="GridLength" Desktop="170" Tablet="200" Phone="*"/>
                                </On>
                                <On Platform="iOS">
                                    <OnIdiom x:TypeArguments="GridLength" Desktop="170" Tablet="200" Phone="*"/>
                                </On>
                            </OnPlatform>
                        </ColumnDefinition.Width>
                    </ColumnDefinition>
                    <ColumnDefinition>
                        <ColumnDefinition.Width>
                            <OnPlatform x:TypeArguments="GridLength">
                                <On Platform="UWP">
                                    <OnIdiom x:TypeArguments="GridLength" Desktop="170" Tablet="140" Phone="*" />
                                </On>
                                <On Platform="Android">
                                    <OnIdiom x:TypeArguments="GridLength" Desktop="170" Tablet="140" Phone="*"/>
                                </On>
                                <On Platform="iOS">
                                    <OnIdiom x:TypeArguments="GridLength" Desktop="170" Tablet="140" Phone="*"/>
                                </On>
                            </OnPlatform>
                        </ColumnDefinition.Width>
                    </ColumnDefinition>

                </Grid.ColumnDefinitions>
                <StackLayout
                                 HorizontalOptions="Center" 
                                 VerticalOptions="Center">
                    <syncfusion:SfButton x:Name="primaryButton"
                                         Text="Primary Button"
                                         WidthRequest="120"
                                         HeightRequest="40"
                                         CornerRadius="2">
                    </syncfusion:SfButton>
                </StackLayout>
                <StackLayout Grid.Column="1"                                
                                 HorizontalOptions="Center" 
                                 VerticalOptions="Center">
                    <syncfusion:SfButton x:Name="normalButton"
                                             Text="Normal Button"
                                             WidthRequest="120"
                                             HeightRequest="40"
                                             BackgroundColor="#D8D6D7"
                                             TextColor="Black"
                                             CornerRadius="2">
                    </syncfusion:SfButton>
                </StackLayout>
                <StackLayout Grid.Row="1" 
                                 HorizontalOptions="Center" 
                                 VerticalOptions="Center">
                    <syncfusion:SfButton x:Name="flatButton"
                                             Text="Flat Button"
                                             BorderWidth="0"
                                             WidthRequest="120"
                                             HeightRequest="40"
                                             TextColor="Accent"
                                             BackgroundColor="Transparent"
                                             CornerRadius="2">
                    </syncfusion:SfButton>
                </StackLayout>
                <StackLayout Grid.Row="1"
                                 Grid.Column="1" 
                                 HorizontalOptions="Center" 
                                 VerticalOptions="Center">
                    <syncfusion:SfButton x:Name="outlineButton"
                                             Text="Outline Button"
                                             WidthRequest="120"
                                             TextColor="Accent"
                                             HeightRequest="40"
                                             BackgroundColor="White"
                                             CornerRadius="0"
                                             BorderColor="Accent">
                        <syncfusion:SfButton.BorderWidth>
                            <OnPlatform x:TypeArguments="x:Double">
                                <On Platform="iOS" Value="2" />
                                <On Platform="Android" Value="1" />
                                <On Platform="UWP" Value="2" />
                            </OnPlatform>
                        </syncfusion:SfButton.BorderWidth>
                    </syncfusion:SfButton>
                </StackLayout>
                <StackLayout Grid.Row="2" 
                                 HorizontalOptions="Center" 
                                 VerticalOptions="Center">
                    <syncfusion:SfButton x:Name="iconButtonLeft"
                                             ShowIcon="True"
                                             ImageSource="button_Heart.png"
                                             Text="Icon Button  "
                                             WidthRequest="130"
                                             HeightRequest="40"
                                             CornerRadius="2">
                    </syncfusion:SfButton>
                </StackLayout>
                <StackLayout Grid.Row="2"
                                 Grid.Column="1" 
                                 HorizontalOptions="Center" 
                                 VerticalOptions="Center">
                    <syncfusion:SfButton x:Name="iconButtonRight"
                                             ShowIcon="True"
                                             HeightRequest="40"
                                             ImageSource="button_Heart.png"
                                             ImageAlignment="End"
                                             Text="  Icon Button"
                                             CornerRadius="2">
                        <syncfusion:SfButton.WidthRequest>
                            <OnPlatform x:TypeArguments="x:Double">
                                <On Platform="iOS" Value="135" />
                                <On Platform="Android" Value="130" />
                                <On Platform="UWP" Value="140" />
                            </OnPlatform>
                        </syncfusion:SfButton.WidthRequest>

                    </syncfusion:SfButton>
                </StackLayout>
                <StackLayout Grid.Row="3" 
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center">
                    <syncfusion:SfButton x:Name="circleButton"
                                             HorizontalOptions="Center"
                                             VerticalOptions="Center"
                                             HorizontalTextAlignment="Center"
                                             VerticalTextAlignment="Center"
                                             Text="&#xEB52;"
                                             BorderWidth="0"
                                             FontSize="20"
                                             WidthRequest="40"
                                             HeightRequest="40"
                                             CornerRadius="20" >
                        <syncfusion:SfButton.FontFamily>
                            <OnPlatform x:TypeArguments="x:String">
                                <On Platform="iOS" Value="Segoe MDL2 Assets" />
                                <On Platform="Android" Value="button_Segoe MDL2 Assets.ttf#Segoe MDL2 Assets" />
                                <On Platform="UWP" Value="/Assets/Fonts/button_Segoe MDL2 Assets.ttf#Segoe MDL2 Assets" />
                            </OnPlatform>
                        </syncfusion:SfButton.FontFamily>
                    </syncfusion:SfButton>
                </StackLayout>

                <StackLayout Grid.Row="3"
                                 Grid.Column="1"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center">
                    <syncfusion:SfButton x:Name="iconButton"
                                             HorizontalOptions="Center"
                                             VerticalOptions="Center"
                                             HorizontalTextAlignment="Center"
                                             VerticalTextAlignment="Center"
                                             Text="&#xEB52;"
                                             BorderWidth="0"
                                             FontSize="16"
                                             WidthRequest="40"
                                             HeightRequest="40"
                                             CornerRadius="20"
                                             IsCheckable="true"
                                             TextColor="Black"
                                             BackgroundColor="Transparent" 
                                             PressedBackgroundColor="Transparent">
                        <syncfusion:SfButton.FontFamily>
                            <OnPlatform x:TypeArguments="x:String">
                                <On Platform="iOS" Value="Segoe MDL2 Assets" />
                                <On Platform="Android" Value="button_Segoe MDL2 Assets.ttf#Segoe MDL2 Assets" />
                                <On Platform="UWP" Value="/Assets/Fonts/button_Segoe MDL2 Assets.ttf#Segoe MDL2 Assets" />
                            </OnPlatform>
                        </syncfusion:SfButton.FontFamily>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Checked" >
                                    <VisualState.Setters>
                                        <Setter Property="TextColor" Value="Accent"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Unchecked">
                                    <VisualState.Setters>
                                        <Setter Property="TextColor" Value="Black" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </syncfusion:SfButton>
                </StackLayout>
            </Grid>
        </ScrollView>
    </local:SampleView.Content>
</local:SampleView>
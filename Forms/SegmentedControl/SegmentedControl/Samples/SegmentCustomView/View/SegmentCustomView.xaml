<?xml version="1.0" encoding="utf-8" ?>
<local:SampleView
    x:Class="SampleBrowser.SegmentedControl.SegmentCustomView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SampleBrowser.Core;assembly=SampleBrowser.Core"
    xmlns:buttons="clr-namespace:Syncfusion.XForms.Buttons;assembly=Syncfusion.Buttons.XForms">
  <local:SampleView.Resources>
    <ResourceDictionary>
      <local:ImagePathConverter
        x:Key="ImagePathConverter">
      </local:ImagePathConverter>
    </ResourceDictionary>
  </local:SampleView.Resources>
    <local:SampleView.Content>
        <ScrollView>
        <Grid x:Name="MainGrid">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer
                Tapped="TapGestureRecognizer_OnTapped" 
                NumberOfTapsRequired="1">
                </TapGestureRecognizer>
            </Grid.GestureRecognizers>
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="0.1*">
                    </RowDefinition>
                <RowDefinition
                    Height="0.65*">
                </RowDefinition>
                <RowDefinition
                    Height="0.1*">
                </RowDefinition>
                <RowDefinition
                    Height="0.15*">
                </RowDefinition>
            </Grid.RowDefinitions>
            <Grid
                Grid.Row="0"
                Padding="20,10,20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="0.1*">
                    </ColumnDefinition>
                    <ColumnDefinition
                        Width="0.5*">
                    </ColumnDefinition>
                    <ColumnDefinition
                     Width="0.4*">
                     </ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Image
                    Grid.Column="0"
                    Source="{Binding Converter={StaticResource ImagePathConverter}, ConverterParameter=SampleBrowser.SfSegmentedControl.ellana.png}"
                    Margin="-10">
                </Image>
                <StackLayout
                    Grid.Column="1"
                    Orientation="Vertical"
                    Margin="10,0,0,0">
                    <Label
                        Text="Emily Ballard"
                        TextColor="Black"
                        FontSize="20"
                        FontAttributes="Bold">
                    </Label>
                    <Label
                        x:Name="timeLabel"
                        TextColor="#8E8E8E"
                        FontSize="12"
                        Margin="0,-5,0,0">
                    </Label>
                </StackLayout>
                <Button
                    Grid.Column="2"
                    x:Name="followButton"
                    Clicked="FollowButton_OnClicked"
                    Text="Follow"
                    BackgroundColor="White"
                    TextColor="Black"
                    BorderColor="#979797"
                    HeightRequest="50"
                    VerticalOptions="Center"
                    BorderRadius="4"
                    BorderWidth="1">
                    </Button>
                </Grid>
                <Image
                    Grid.Row="1"
                    Margin="20"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Source="{Binding Converter={StaticResource ImagePathConverter}, ConverterParameter=SampleBrowser.SfSegmentedControl.cat.png}">
                <Image.GestureRecognizers>
                 <TapGestureRecognizer
                    Tapped="TapGestureRecognizer_OnTapped"
                    NumberOfTapsRequired="1">
                  </TapGestureRecognizer>
                </Image.GestureRecognizers>
            </Image>
            <Grid
                Grid.Row="2">
                <Grid 
                 Margin="20,0,20,0"
                 HeightRequest="20">
            <StackLayout
                 Orientation="Horizontal">
                        <Image
                            Source="{Binding Converter={StaticResource ImagePathConverter}, ConverterParameter=SampleBrowser.SfSegmentedControl.likes.png}"
                            VerticalOptions="Center">
                        </Image>
                        <Image
                            Source="{Binding Converter={StaticResource ImagePathConverter}, ConverterParameter=SampleBrowser.SfSegmentedControl.heart.png}"
                            VerticalOptions="Center">
                        </Image>
                        <Label
                            Text="2k"
                            TextColor="#8E8E8E"
                            FontSize="14"
                            VerticalOptions="Center">
                        </Label>
            </StackLayout>
                    <Label
                        Text="124 Comments | 42 Shares"
                        TextColor="#8E8E8E"
                        FontSize="14"
                        HorizontalOptions="End"
                        VerticalOptions="Center">
                    </Label>
                </Grid>
                <Frame
                    Margin="20,-5,20,0"
                    CornerRadius="20"
                    BackgroundColor="White" 
                    VerticalOptions="Center"
                    OutlineColor="#979797"
                    x:Name="frame"
                    Opacity="0">
                    <Frame.Padding>
                        <OnPlatform
                            x:TypeArguments="Thickness">
                            <OnPlatform.Android>
                                <OnIdiom
                                    x:TypeArguments="Thickness"
                                    Tablet="15,10"
                                    Phone="0,5">
                                </OnIdiom>
                            </OnPlatform.Android>
                            <OnPlatform.iOS>
                                 <OnIdiom
                                    x:TypeArguments="Thickness"
                                    Tablet="15,10"
                                    Desktop="15,10">
                                  </OnIdiom>
                            </OnPlatform.iOS>
                            <OnPlatform.WinPhone>
                                <OnIdiom
                                    x:TypeArguments="Thickness"
                                    Phone="25,3,15,3"
                                    Desktop="120,8,20,8">
                                </OnIdiom>
                            </OnPlatform.WinPhone>
                        </OnPlatform>
                    </Frame.Padding>
                    <Frame.HeightRequest>
                        <OnIdiom 
                            x:TypeArguments="x:Double"
                            Tablet="50"
                            Phone="130"
                            Desktop="100"/>
                    </Frame.HeightRequest>
                    <buttons:SfSegmentedControl
                        BorderColor="Transparent" 
                        x:Name="CustomSegmentsContainer"
                        SegmentHeight="50"
                        Color="Transparent"
                        VisibleSegmentsCount="6">
                        <buttons:SfSegmentedControl.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapGestureRecognizer_OnTapped" NumberOfTapsRequired="1" />
                        </buttons:SfSegmentedControl.GestureRecognizers>
                        <buttons:SfSegmentedControl.SegmentPadding>
                            <OnPlatform
                                x:TypeArguments="x:Double">
                                <OnPlatform.Android
                                    x:TypeArguments="Double"
                                    Value="5">
                                 </OnPlatform.Android>
                                 <OnPlatform.iOS
                                    x:TypeArguments="Double"
                                    Value="5">
                                 </OnPlatform.iOS>
                                 <OnPlatform.WinPhone 
                                    x:TypeArguments="Double"
                                    Value="5">
                                 </OnPlatform.WinPhone>
                             </OnPlatform>
                        </buttons:SfSegmentedControl.SegmentPadding>
                        <buttons:SfSegmentedControl.SelectionIndicatorSettings>
                            <buttons:SelectionIndicatorSettings
                                Color="Transparent">
                            </buttons:SelectionIndicatorSettings>
                        </buttons:SfSegmentedControl.SelectionIndicatorSettings>
                    </buttons:SfSegmentedControl>
                </Frame>
            </Grid>
            <Grid Grid.Row="3" HeightRequest="50">
                <buttons:SfSegmentedControl
                BorderColor="Transparent" 
                HorizontalOptions="Center"
                x:Name="buttonContainer"
                VisibleSegmentsCount="2"
                Color="Transparent"
                SegmentPadding="30">
                    <buttons:SfSegmentedControl.SelectionIndicatorSettings>
                  <buttons:SelectionIndicatorSettings
                    Color="Transparent">
                  </buttons:SelectionIndicatorSettings>
                </buttons:SfSegmentedControl.SelectionIndicatorSettings>
            </buttons:SfSegmentedControl>
        </Grid>
        </Grid>
        </ScrollView>
    </local:SampleView.Content>
</local:SampleView>

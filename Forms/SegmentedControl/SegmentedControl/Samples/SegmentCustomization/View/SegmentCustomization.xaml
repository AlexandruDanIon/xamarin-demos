<?xml version="1.0" encoding="utf-8" ?>
<local:SampleView
    x:Class="SampleBrowser.SegmentedControl.SegmentCustomization"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SampleBrowser.Core;assembly=SampleBrowser.Core"
    xmlns:buttons="clr-namespace:Syncfusion.XForms.Buttons;assembly=Syncfusion.Buttons.XForms"
    BackgroundColor="#2196F3">
    <local:SampleView.Content>
        <ScrollView>
        <Grid 
            BackgroundColor="Black"
            x:Name="BackgroundGrid">
            <Grid
                BackgroundColor="White"
                x:Name="MainGrid"
                RowSpacing="0">
                <Grid.Padding>
                    <OnIdiom
                        x:TypeArguments="Thickness"
                        Phone="0, 0, 0, 0"
                        Tablet="200, 0, 200, 0"
                        Desktop="200, 0, 200, 0">
                    </OnIdiom>
                </Grid.Padding>
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="100">
                    </RowDefinition>
                    <RowDefinition
                        Height="*">
                    </RowDefinition>
                </Grid.RowDefinitions>
                <Grid
                    Padding="0,20,0,0">
                    <buttons:SfSegmentedControl
                        x:Name="Backlight"
                        CornerRadius="25"
                        Margin="20,10"
                        BorderColor="#FF464646"
                        Color="#FF464646"
                        SelectionChanged="Backlight_SelectionChanged"
                        SelectedIndex="0"
                        FontSize="14"
                        FontColor="#FFEEEEED"
                        VisibleSegmentsCount="2"
                        SelectionTextColor="#3F3F3F"
                        VerticalOptions="Center"
                        HorizontalOptions="Center">
                         <buttons:SfSegmentedControl.SegmentHeight>
                                        <OnPlatform
                                            x:TypeArguments="x:Double">
                                            <On
                                                Platform="Android"
                                                Value="50">
                                            </On>
                                            <On
                                                Platform="UWP"
                                                Value="50" >
                                            </On>
                                            <On
                                                Platform="iOS"
                                                Value="40">
                                            </On>
                                        </OnPlatform>
                                     </buttons:SfSegmentedControl.SegmentHeight>
                        <buttons:SfSegmentedControl.SelectionIndicatorSettings>
                            <buttons:SelectionIndicatorSettings
                                Color="#FFE521"
                                CornerRadius="25"
                                Position="Fill">
                            </buttons:SelectionIndicatorSettings>
                        </buttons:SfSegmentedControl.SelectionIndicatorSettings>
                    </buttons:SfSegmentedControl>
                </Grid>
                <Grid
                    Grid.Row="1"
                    RowSpacing="0"
                    x:Name="ContentGrid"
                    Padding="5">
                    <Grid.RowDefinitions>
                        <RowDefinition
                            Height="40">
                        </RowDefinition>
                        <RowDefinition
                            Height="90">
                        </RowDefinition>
                        <RowDefinition
                            Height="90">
                        </RowDefinition>
                    </Grid.RowDefinitions>
                    <buttons:SfSegmentedControl
                        x:Name="IconSegment"
                        DisplayMode="Image"
                        CornerRadius="15"
                        SegmentHeight="30"
                        BackgroundColor="Transparent"
                        BorderColor="Transparent"
                        SelectedIndex="1"
                        Color="Transparent"
                        FontSize="12"
                        FontIconFontColor="Black"
                        VisibleSegmentsCount="5"
                        SelectionTextColor="#FFFFFF"
                        VerticalOptions="Center"
                        HorizontalOptions="Center">
                        <buttons:SfSegmentedControl.SelectionIndicatorSettings>
                            <buttons:SelectionIndicatorSettings
                                Color="#FF00AF9C"
                                CornerRadius="15"
                                Position="Fill">
                            </buttons:SelectionIndicatorSettings>
                        </buttons:SfSegmentedControl.SelectionIndicatorSettings>
                    </buttons:SfSegmentedControl>
                    <Grid
                        Grid.Row="2"
                        Padding="0,30,0,0">
                        <buttons:SfSegmentedControl
                            x:Name="PrimaryColorSegment"
                            DisplayMode="Image"
                            CornerRadius="0"
                            SegmentHeight="45"
                            SegmentWidth="50"
                            WidthRequest="350"
                            Color="Transparent"
                            FontIconFontColor="Black"
                            Margin="10,0,10,0"
                            BackgroundColor="Transparent"
                            BorderColor="#EEEEEE"
                            SelectionChanged="Handle_SelectionChanged"
                            SelectedIndex="6"
                            FontSize="12"
                            VisibleSegmentsCount="7"
                            SegmentCornerRadius="15"
                            VerticalOptions="Center"
                            HorizontalOptions="Center">
                            <buttons:SfSegmentedControl.SelectionIndicatorSettings>
                                <buttons:SelectionIndicatorSettings
                                    Color="#EEEEEE"
                                    Position="Fill">
                                </buttons:SelectionIndicatorSettings>
                            </buttons:SfSegmentedControl.SelectionIndicatorSettings>
                        </buttons:SfSegmentedControl>
                    </Grid>
                    <Grid
                        Grid.Row="1"
                        Margin="10"
                        Padding="0,20,0,0">
                        <buttons:SfSegmentedControl
                            x:Name="Image_Text"
                            SelectionAnimationDuration="100"
                            CornerRadius="7"
                            SegmentHeight="50"
                            DisplayMode="ImageWithText"
                            Color="#048EAC"
                            FontIconFontColor="Black"
                            SegmentCornerRadius="0"
                            BorderColor="#048EAC"
                            SelectedIndex="1"
                            FontSize="12"
                            FontColor="White"
                            VisibleSegmentsCount="3"
                            SelectionTextColor="#048EAC"
                            VerticalOptions="Center"
                            HorizontalOptions="Center">
                            <buttons:SfSegmentedControl.SelectionIndicatorSettings>
                                <buttons:SelectionIndicatorSettings
                                    Color="#EDFCFF"
                                    Position="Fill">
                                    <buttons:SelectionIndicatorSettings.CornerRadius>
                                        <OnPlatform
                                            x:TypeArguments="x:Double">
                                            <On
                                                Platform="Android"
                                                Value="0">
                                            </On>
                                            <On
                                                Platform="UWP"
                                                Value="9" >
                                            </On>
                                            <On
                                                Platform="iOS"
                                                Value="0">
                                            </On>
                                        </OnPlatform>
                                    </buttons:SelectionIndicatorSettings.CornerRadius>
                                </buttons:SelectionIndicatorSettings>
                            </buttons:SfSegmentedControl.SelectionIndicatorSettings>
                        </buttons:SfSegmentedControl>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
        </ScrollView>
    </local:SampleView.Content>
</local:SampleView>
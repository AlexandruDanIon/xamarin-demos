<?xml version="1.0" encoding="utf-8" ?>
<local:SampleView
    x:Class="SampleBrowser.SfTabView.CustomView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SampleBrowser.Core;assembly=SampleBrowser.Core"
    xmlns:converter="clr-namespace:SampleBrowser.SfTabView"
    xmlns:tabview="clr-namespace:Syncfusion.XForms.TabView;assembly=Syncfusion.SfTabView.XForms"
	BackgroundColor="#2196F3" x:Name="root">
  <local:SampleView.Resources>
    <ResourceDictionary>
      <converter:booltofontConverter x:Key="booltofont"/>
      <converter:booltocolorConverter x:Key="booltocolor"/>
      <converter:CustomViewConverter x:Key="customviewfont"/>
    </ResourceDictionary>
  </local:SampleView.Resources>
    <local:SampleView.Content>
      <Grid BackgroundColor="White" >
      <tabview:SfTabView Margin="0,0,0,2" x:Name="simTab" VisibleHeaderCount="2"  >
        <tabview:SfTabView.Items>
          <tabview:SfTabItem Title="Chat"   
                             TitleFontSize="14"
                             SelectionColor="#FF00AFF0"
                             FontIconFontColor="#FF00AFF0"
                             TitleFontColor="#FF00AFF0">
            <tabview:SfTabItem.Content>

              <ListView BackgroundColor="White"
                    RowHeight="70"
                    SeparatorColor="#f6f6f6" 
                    CachingStrategy="RecycleElementAndDataTemplate"
                    BindingContext="{Binding Path=BindingContext, Source={x:Reference root}}" ItemsSource="{Binding MessageLogs}">
                <ListView.ItemTemplate>
                  <DataTemplate>
                    <ViewCell>
                      <Grid BackgroundColor="White">
                        <Grid.ColumnDefinitions>
                          <ColumnDefinition Width="70"/>
                          <ColumnDefinition Width="*"/>
                          <ColumnDefinition Width="75"/>
                        </Grid.ColumnDefinitions>
                        <Grid WidthRequest="50" Margin="10" HeightRequest="50"  VerticalOptions="Center"  HorizontalOptions="Center">
    
                        <Grid>
                          <converter:CustomFrame CornerRadius="25" BackgroundColor="{Binding ContactImage}" HasShadow="false"/>
                        </Grid>
                          <Label Text="{Binding ContactReadType}"
                                 TextColor="White"
                                 FontSize="22"
                                 WidthRequest="50"
                                 HeightRequest="50"
                                 VerticalTextAlignment="Center"
                                 HorizontalTextAlignment="Center"
                                 HorizontalOptions="Center"
                          VerticalOptions="Center"/>
                        </Grid>
                        <Grid Margin="5" Grid.Column="1"  VerticalOptions="Center">
                          <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                          </Grid.RowDefinitions>
                          <Label Text="{Binding ContactName}"
                                 FontSize="15"
                                  WidthRequest="100"
                                  HeightRequest="30"
                                  FontAttributes="{Binding Read, Converter={StaticResource booltofont}}"
                                  TextColor="{Binding Read, Converter={StaticResource booltocolor}}"
                                  VerticalTextAlignment="Center"
                                  VerticalOptions="End"/>
                          <Label Text="{Binding Message}"
                                 Grid.Row="1"
                         FontSize="12"
                         WidthRequest="100"
                         HeightRequest="30"
                         FontAttributes="{Binding Read, Converter={StaticResource booltofont}}"
                         TextColor="{Binding Read, Converter={StaticResource booltocolor}}"
                         VerticalTextAlignment="Center"
                         VerticalOptions="Start"/>
                        </Grid>
                        <Grid Margin="5" Grid.Column="2" VerticalOptions="Center">
                          <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                          </Grid.RowDefinitions>
                          <Label Text="{Binding DateMonth}"
                                 FontSize="15"
                                  FontAttributes="{Binding Read, Converter={StaticResource booltofont}}"
                                  TextColor="{Binding Read, Converter={StaticResource booltocolor}}"
                                 VerticalOptions="Center"/>
                          <Label Text="{Binding MessageCount}"
                                 Grid.Row="1"
                         FontSize="12"
                         FontAttributes="{Binding Read, Converter={StaticResource booltofont}}"
                         TextColor="{Binding Read, Converter={StaticResource booltocolor}}"
                         VerticalOptions="Center"/>
                        </Grid>
                      </Grid>
                    </ViewCell>
                  </DataTemplate>
                </ListView.ItemTemplate>
              </ListView>

            </tabview:SfTabItem.Content>
            <tabview:SfTabItem.HeaderContent>
              <Grid VerticalOptions="Center" HeightRequest="50" Padding="10,5" x:Name="ChatsHeader" StyleId="ChatsHeader"
                           HorizontalOptions="Center">
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                  </Grid.ColumnDefinitions>
                  <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>
                      <ColumnDefinition Width="Auto"/>
                      <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                  <Label Text="Chats"
                         TextColor="#FF00AFF0"
                         FontSize="16"
                         WidthRequest="50"
                         HeightRequest="20"
                         VerticalOptions="Center"
                         HorizontalOptions="Center"/>
                  <Grid VerticalOptions="Center" Grid.Column="1" 
                         HorizontalOptions="Center">
                    <Grid HeightRequest="20" WidthRequest="20" VerticalOptions="Center" HorizontalOptions="Center"  >
                      <converter:CustomFrame CornerRadius="10" BackgroundColor="Red" HasShadow="false"/>
                    </Grid>
                    <Label Text="{Binding ReadCount}" BindingContext="{Binding Path=BindingContext, Source={x:Reference root}}" TextColor="White" x:Name="ReadCountLabel"
                           FontSize="16"
                           HorizontalTextAlignment="Center"
                           VerticalOptions="Center"
                           HorizontalOptions="Center">
                    </Label>
                  </Grid>
                </Grid>
              </Grid>

            </tabview:SfTabItem.HeaderContent>
          </tabview:SfTabItem>
          <tabview:SfTabItem Title="Contacts" 
                             TitleFontSize="14"
                             SelectionColor="#FF00AFF0"
                             FontIconFontColor="#FF00AFF0"
                             TitleFontColor="#FF00AFF0">
            <tabview:SfTabItem.Content>
              <ListView BackgroundColor="White" 
                        RowHeight="70"
                        SeparatorColor="#f6f6f6"
                        BindingContext="{Binding Path=BindingContext, Source={x:Reference root}}" ItemsSource="{Binding ListData}">
                <ListView.ItemTemplate>
                  <DataTemplate>
                    <ViewCell>
                      <Grid>
                        <Grid.ColumnDefinitions>
                          <ColumnDefinition Width="*"/>
                          <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackLayout
                Orientation="Horizontal">
                          <Grid WidthRequest="50" Margin="10" HeightRequest="50"  VerticalOptions="Center"  HorizontalOptions="Center">

                            <Grid  >
                              <converter:CustomFrame CornerRadius="25" BackgroundColor="{Binding ContactImage}" HasShadow="false"/>
                            </Grid>
                            <Label Text="{Binding ContactReadType}"
                                    TextColor="White"
                                 FontSize="22"
                                 WidthRequest="50"
                                 HeightRequest="50"
                                 VerticalTextAlignment="Center"
                                 HorizontalTextAlignment="Center"
                                 HorizontalOptions="Center"
                            VerticalOptions="Center"/>

                          </Grid>

                          <StackLayout Margin="5" Orientation="Vertical" VerticalOptions="Center">
                            <Label Text="{Binding ContactName}"
                                  TextColor="Black"
                                  FontSize="16"
                                  WidthRequest="100"
                                  HeightRequest="30"
                                  VerticalOptions="Center"/>
                            <Label Text="{Binding ContactNumber}"
                                   FontSize="12"
                                   WidthRequest="100"
                                   HeightRequest="30"
                           VerticalOptions="Center"/>
                          </StackLayout>
                        </StackLayout>
                        <StackLayout Grid.Column="1" Orientation="Horizontal" VerticalOptions="Center">
                          <Label Text="t" Margin="2,0,20,0" FontSize="22" HeightRequest="50" VerticalTextAlignment="Center" VerticalOptions="Center" FontFamily="{Binding Converter={StaticResource customviewfont},ConverterParameter=NestedTab}"/>
                        </StackLayout>
                      </Grid>
                    </ViewCell>
                  </DataTemplate>
                </ListView.ItemTemplate>
              </ListView>
            </tabview:SfTabItem.Content>
            <tabview:SfTabItem.HeaderContent>
             <Grid VerticalOptions="Center" HeightRequest="50" Padding="10,5" x:Name="ContactsHeader" StyleId="ContactsHeader"
                           HorizontalOptions="Center">
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                  </Grid.ColumnDefinitions>
                  <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>
                      <ColumnDefinition Width="Auto"/>
                      <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                  <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>
                      <ColumnDefinition Width="Auto"/>
                      <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Text="Contacts"
                           TextColor="#FF00AFF0"
                           FontSize="16"
                           WidthRequest="70"
                           HeightRequest="20"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"/>
                      <ActivityIndicator x:Name="uwprefreshIndicator" 
                                           Color="#FF00AFF0" BackgroundColor="Transparent" IsVisible="False"/>
                    <Grid  VerticalOptions="Center" Grid.Column="1"
                           HorizontalOptions="Center">
                      <Grid HeightRequest="70" WidthRequest="50" VerticalOptions="Center" HorizontalOptions="Center"  >
                        <Button x:Name="refreshButton"
                                Text="&#xe895;"
                                TextColor="#FF00AFF0"
                                FontSize="16"
                                FontFamily="{Binding Converter={StaticResource customviewfont},ConverterParameter=NestedTab}"
                                BackgroundColor="Transparent">
                                                    <Label.FontFamily>
        <OnPlatform x:TypeArguments="x:String">
                <On Platform="iOS" Value="Segoe MDL2 Assets" />
                <On Platform="Android" Value="Segoe MDL2 Assets.ttf#Segoe MDL2 Assets" />
                <On Platform="UWP" Value="/Assets/Fonts/Segoe MDL2 Assets.ttf#Segoe MDL2 Assets" />
        </OnPlatform>
    </Label.FontFamily>
                        </Button>
                        <ActivityIndicator x:Name="refreshIndicator" 
                                           Margin="15" BackgroundColor="Transparent"
                                            IsRunning="True"
                                           Color="#FF00AFF0"/>
                      </Grid>
                    </Grid>
                  </Grid>
                </Grid>
              </Grid>

            </tabview:SfTabItem.HeaderContent>
          </tabview:SfTabItem>
        </tabview:SfTabView.Items>
      </tabview:SfTabView>
      </Grid>
    </local:SampleView.Content>
</local:SampleView>